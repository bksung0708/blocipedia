<strong><%= "Current Plan: #{current_user.role}" %></strong><br>
<% if current_user.standard? %>
  <%= form_tag charges_path do %>
    <h4>Click the button to upgrade!</h4>
    <script class='stripe-button' src="https://checkout.stripe.com/checkout.js"
    data-key="<%= @stripe_btn_data[:key] %>"
    data-amount="<%= @stripe_btn_data[:amount] %>"
    data-description="<%= @stripe_btn_data[:description] %>" >
    </script>
  <% end %>
<% end %>

<% if current_user.premium? %>
  <h4>Click the button to downgrade!</h4>
  <%= link_to "Downgrade", edit_charge_path(current_user), class: 'btn btn-success' %>
<% end %>
